script#bluelink-template(type='text/template')
  li.sortable.button.no-header.raspbee-device
    label.device-label(data-bind="text: name, tooltip: $data.labelTooltipHtml")
    div.button.button-control.ui-controlgroup.ui-controlgroup-horizontal.ui-corner-all.ui-mini.no-carousel-slide(data-role='controlgroup', data-type='horizontal', data-mini='true', data-enhanced='true')
      .ui-controlgroup-controls
        a.ui-first-child.ui-btn.ui-corner-all(name='startAircoButton', data-bind='click: modeStartAirco')=__("airco")
        a.ui-last-child.ui-btn.ui-corner-all(name='offAircoButton', data-bind='click: modeOffAirco')=__("off")
        div.ui-smallspacer
      .ui-controlgroup-controls
        a.ui-first-child.ui-btn.ui-corner-all(name='lockButton', data-bind='click: modeLock')=__("lock")
        a.ui-last-child.ui-btn.ui-corner-all(name='unlockButton', data-bind='click: modeUnlock')=__("unlock")
        div.ui-smallspacer
      .ui-controlgroup-controls
        a.ui-first-child.ui-btn.ui-corner-all(name='startChargeButton', data-bind='click: modeStartCharge')=__("charge")
        a.ui-last-child.ui-btn.ui-corner-all(name='stopChargeButton', data-bind='click: modeStopCharge')=__("stop")
        div.ui-smallspacer
      .ui-controlgroup-controls
        a.ui-first-child.a.ui-btn.ui-corner-all.ui-last-child(name='refreshButton', data-bind='click: modeRefresh')=__("refresh")
    span.attributes(data-bind="template: { name: 'attribute-template', foreach: $data.device.attributes, afterRender: $data.afterAttributeRender }")
      
